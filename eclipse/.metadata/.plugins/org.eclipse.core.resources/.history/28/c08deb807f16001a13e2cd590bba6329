package net.minecraft.src;

public class Perk {
	public static Perk[] perks = new Perk[64];
	public int id = 0;
	public String name = "none";
	public Perk(int id, String name)
	{
		if(perks[id] != null)
		{
			 throw new IllegalArgumentException("Slot " + id + " is already occupied by " + perks[id] + " when adding " + this);
		}
		else
		{
			this.name = name;
			this.id = id;
			perks[id] = this;
		}
	}
	
	public static Perk none = new Perk(0);
	public static Perk flame = new Perk(1);

}
